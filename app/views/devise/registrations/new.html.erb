<h2 class="text-center">Sign up</h2>

<div class="col-md-offset-3 col-md-6">
  <%= devise_error_messages! %>
  <div class="well well-lg">
    <%= form_for(resource, as: resource_name, :html => { class: 'form-horizontal', role: 'form' } ,
                 url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="col-md-3 control-label">
            <%= f.label :first_name %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            <%= f.label :last_name %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :last_name, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            <%= f.label :email %>
          </div>
          <div class="col-md-9">
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            <%= f.label :password %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-md' %>
        </div>
    <% end %>

    <div class="text-center table-bordered">
      If you have an account please <%= render "devise/shared/links" %>
    </div>

  </div>
</div>